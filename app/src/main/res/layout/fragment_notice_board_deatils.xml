<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="itg8.com.wmcapp.board.NoticeBoardDeatilsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_garbage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/bpkuti"
            android:visibility="visible" />

        <itg8.com.wmcapp.widget.CustomFontTextView
            android:id="@+id/lbl_title_only"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_gradient"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:maxLines="2"
            android:paddingBottom="10dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:text="Notice Title"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            app:font_value="ROBOTO_MEDIUM" />


        <itg8.com.wmcapp.widget.CustomFontTextView
            android:id="@+id/lbl_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="05dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="05dp"
            android:gravity="center_vertical"
            android:text="Notice Title Only.Notice Title Only.Notice Title Only.Notice Title Only.Notice Title Only.Notice Title Only.Notice Title Only Notice Title Only.Notice Title Only.Notice Title Only.Notice Title Only.Notice Title Only.Notice Title Only.Notice Title OnlyNotice Title Only.Notice Title Only.Notice Title Only.Notice Title Only.Notice Title Only.Notice Title Only.Notice Title OnlyNotice Title Only.Notice Title Only.Notice Title Only.Notice Title Only.Notice Title Only.Notice Title Only.Notice Title Only"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:font_value="ROBOTO_LIGHT" />

        <itg8.com.wmcapp.widget.CustomFontTextView
            android:id="@+id/lbl_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:fontFamily="@font/roboto"
            android:text="11-3-2017"
            android:textColor="@color/colorGray"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>
